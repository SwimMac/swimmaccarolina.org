---
layout: base.njk
permalink: /staff/
title: Our People
---
{% set staff = collections.staff %}
<main id="main" class="bg-gray-100">
  {% banner title %}

  <div class="container py-6">

    <h2 class="separator-center">Administration</h2>

    <div class="flex flex-wrap justify-center -m-4 mb-8">
      {% for staffMember in staff | reverse %}
        {% if staffMember.data.department == 'Administration' %}

          {% include 'staff-card.njk' %}

        {% endif %}
      {% endfor%}
    </div>

    <hr>

    <h2 class="separator-center">Competitive Team Leadership</h2>

    <div class="flex flex-wrap justify-center -m-4 mb-8">
      {% for staffMember in staff | reverse %}
        {% if staffMember.data.department == 'competitive-team-leadership' %}

          {% include 'staff-card.njk' %}

        {% endif %}
      {% endfor%}
    </div>

    <hr>

    <h2 class="separator-center">Competitive Team Coaches</h2>

    <div class="flex flex-wrap justify-center -m-4 mb-8">
      {% for staffMember in staff | reverse %}
        {% if staffMember.data.department == 'competitive-team-coaches' %}

          {% include 'staff-card.njk' %}

        {% endif %}
      {% endfor%}
    </div>

    <hr>

    <h2 class="separator-center">Swim School</h2>

    <div class="flex flex-wrap justify-center -m-4 mb-8">
      {% for staffMember in staff | reverse %}
        {% if staffMember.data.department == 'swim-school' %}

        {% include 'staff-card.njk' %}

        {% endif %}
      {% endfor%}
    </div>

    <hr>

    <h2 class="separator-center">Junior Swim League (JSL), Teen-Fit, &amp; Homeschool</h2>

    <div class="flex flex-wrap justify-center -m-4 mb-8">
        {% for staffMember in staff | reverse %}
          {% if staffMember.data.department == 'jsl-teen-fit-homeschool' %}

          {% include 'staff-card.njk' %}

          {% endif %}
        {% endfor%}
    </div>

    <hr>

    <h2 class="separator-center">Masters Coaches</h2>

    <div class="flex flex-wrap justify-center -m-4 mb-8">
        {% for staffMember in staff | reverse %}
          {% if staffMember.data.department == 'masters-coaches' %}

            {% include 'staff-card.njk' %}

          {% endif %}
        {% endfor%}
    </div>

    <hr>

    <h2 class="separator-center">Board of Directors</h2>

    <div class="flex flex-wrap justify-center -m-4 mb-8">
        {% for staffMember in staff | reverse %}
          {% if staffMember.data.department == 'board' %}

          <div class="w-1/2 md:w-1/3 lg:w-1/5 p-4">
            <div class="card text-center h-full">
              <div class="p-4">
                <h3 class="text-xl text-secondary mb-2">{{ staffMember.data.firstName }} {{ staffMember.data.lastName }}</h3>
                <p><a href="mailto:{{ staffMember.data.email }}">Email</a></p>
              </div>
            </div>
          </div>

          {% endif %}
        {% endfor%}
    </div>

  </div>
</main>