---
layout : base.njk
title : Swim School North
---
<main id="main" class="bg-gray-100 overflow-hidden">
    {% banner title, {image: 'banners/hffa.jpg'} %}

    <div class="container my-6">
        <p>
            <a href="/">Home</a> /
            <a href="/swim-school/">Swim School</a> /
            {{ title }}
        </p>

        {% include 'covid-notice.njk' %}

       <div class="flex flex-wrap -mx-4">

           {% for group in swim_school.groups %}
            <div class="w-full md:w-1/2 lg:w-1/3 p-4">
                <a href="/swim-school/north/{{ group.url }}" class="card h-full overflow-hidden">
                    {% if group.image %}
                    <div class="card-image h-64 bg-center bg-cover" style="background-image: url('/static/cards/{{ group.image }}');"></div>
                    {% endif %}
                    <div class="p-4">
                        <h2>{{ group.name }}</h2>
                        <p>{{ group.ages }}</p>
                        <p>{{ group.description }}</p>
                    </div>
                </a>
            </div>
            {% endfor %}

        </div>

        <div class="card p-4 mt-6">
            <p class="text-center">
                <a class="button ghost" href="https://www.instagram.com/swimmacswimschool/?hl=en" target="_blank" rel="noopener">
                    SwimMAC Swim School on Instagram
                </a>
            </p>

            <div id="curator-feed-default-feed-layout"></div>
        </div>

    </div>
</main>

<script type="text/javascript">
