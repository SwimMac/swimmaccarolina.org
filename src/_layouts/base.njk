<!DOCTYPE html>
<html lang="en">
  <head>
    {% include "head.njk" %}
    {% if site.env %}
      <!-- capture the CSS content as a Liquid variable -->
      {% set css %}{% include "app.compiled.css" %}{% endset %}
      <style>{{css | safe}}</style>
    {% else %}
      <link rel="stylesheet" href="/static/app.compiled.css">
    {% endif %}
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  </head>

  <body>
    <a href="#main" class="skip-link">Skip to main content</a>

    <nav class="bg-secondary">
      <div class="container flex justify-end">
        <ul class="flex list-none m-0">
          {% for item in aux_nav %}
          <li class="mb-0">
            <a href="{{ item.url }}" {% if item.targetBlank %} target="_blank" {% endif %} class="inline-block no-underline text-white p-4 hover:bg-primary hover:text-white">
              {{ item.name }}
            </a>
          </li>
          {% endfor %}
          <li x-data="{ isOpen: false}" @mouseenter="isOpen = true" @mouseleave="isOpen = false" class="relative mb-0">
            <button class="text-white p-4 hover:bg-secondary hover:text-white">
              Swim School Login <i class="fas fa-caret-down"></i>
            </button>

            <ul x-show="isOpen" class="dropdown-menu">
              <li class="dropdown-menu__item">
                <a href="https://app3.jackrabbitclass.com/portal/ppLogin.asp?id=524744" target="_blank" class="dropdown-menu__item-link">
                  North Login
                </a>
              </li>
              <li class="dropdown-menu__item">
                <a href="https://app3.jackrabbitclass.com/portal/ppLogin.asp?id=524998" target="_blank" class="dropdown-menu__item-link">
                  South Login
                </a>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </nav>

    <header class="container flex flex-wrap justify-center md:justify-between items-center py-4">
      <a href="/" class="block">
        <img src="/static/swimmac-logo.svg" alt="SwimMAC Carolina" class="w-48">
      </a>

      <nav>
        <ul class="flex items-center text-lg mr-4 list-none">
          <li x-data="{ isOpen: false}" @mouseenter="isOpen = true" @mouseleave="isOpen = false" class="relative mb-0">
            <button class="px-4 py-2 hover:bg-primary hover:text-white">
              Programs <i class="fas fa-caret-down"></i>
            </button>

            <ul x-show="isOpen" class="dropdown-menu">
              {% for program in programs %}
              <li class="dropdown-menu__item">
                <a href="{{ program.url }}" class="dropdown-menu__item-link">
                  {{ program.name }}
                </a>
              </li>
              {% endfor %}
            </ul>
          </li>

          <li x-data="{ isOpen: false}" @mouseenter="isOpen = true" @mouseleave="isOpen = false" class="relative mb-0">
            <button class="px-4 py-2 hover:bg-primary hover:text-white">
              About Us <i class="fas fa-caret-down"></i>
            </button>

            <ul x-show="isOpen" class="dropdown-menu">
              {% for item in about_us %}
              <li class="dropdown-menu__item">
                <a href="/{{ item.url }}" class="dropdown-menu__item-link">
                  {{ item.name }}
                </a>
              </li>
              {% endfor %}
            </ul>
          </li>

          <li x-data="{ isOpen: false}" @mouseenter="isOpen = true" @mouseleave="isOpen = false" class="relative mb-0">
            <button class="px-4 py-2 hover:bg-primary hover:text-white">
              Contact Us <i class="fas fa-caret-down"></i>
            </button>

            <ul x-show="isOpen" class="dropdown-menu">
              <li class="dropdown-menu__item">
                <a href="/locations" class="dropdown-menu__item-link">
                 Locations
                </a>
              </li>
              <li class="dropdown-menu__item">
                <a href="/contact-us" class="dropdown-menu__item-link">
                 Contact Us
                </a>
              </li>
            </ul>
          </li>
          <li class="ml-2">
            <a href="#" class="button ghost">
              Get Started
            </a>
          </li>
        </ul>
       </nav>
    </header>

    {{ content | safe }}

    <footer class="bg-white py-4 border-t mt-0">
      <div class="container">
        <div class="flex flex-wrap -mx-4">
          <div class="my-2 px-4 w-full sm:w-1/2 lg:w-1/5">
            <h3 class="text-secondary text-xl">Programs</h3>
             <ul class="list-none">
              {% for program in programs %}
              <li class="">
                <a href="{{ program.url }}" class="text-gray-900">
                  {{ program.name }}
                </a>
              </li>
              {% endfor %}
            </ul>
          </div>

          <div class="my-2 px-4 w-full sm:w-1/2 lg:w-1/5">
            <h3 class="text-secondary text-xl">About Us</h3>
             <ul class="list-none">
              {% for item in about_us %}
              <li>
                <a href="#" class="text-gray-900">
                  {{ item.name }}
                </a>
              </li>
              {% endfor %}
            </ul>
          </div>

          <div class="my-2 px-4 w-full sm:w-1/2 lg:w-1/5">
            <h3 class="text-secondary text-xl">Contact Us</h3>
             <ul class="list-none">
              <li>
                <a href="/contact-us" class="text-gray-900">
                  Contact Info
                </a>
              </li>
              <li>
                <a href="/locations" class="text-gray-900">
                  Locations
                </a>
              </li>
            </ul>
          </div>

          <div class="my-2 px-4 w-full sm:w-1/2 lg:w-1/5">
            <h3 class="text-secondary text-xl">Affiliated Links</h3>
            <ul class="list-none">
              <li>
                <a href="http://usaswimming.org/" target="_blank" class="text-gray-900">USA Swimming</a>
              </li>
              <li>
                <a href="http://ncswim.org/" target="_blank" class="text-gray-900">North Carolina Swimming</a>
              </li>
              <li>
                <a href="http://usms.org/" target="_blank" class="text-gray-900">US Masters Swimming</a>
              </li>
              <li>
                <a href="https://www.teamunify.com/Home.jsp?_tabid_=0&amp;team=ncmac" target="_blank" class="text-gray-900">Team Unify</a>
              </li>
            </ul>
          </div>

          <div class="my-2 px-4 w-full xl:w-1/5">
            <h3 class="text-secondary text-xl">Follow Us</h3>
            <ul class="list-none text-4xl text-secondary flex space-x-4">
              <li>
                <a href="http://facebook.com/SwimMACCarolina" class="text-secondary" target="_blank">
                  <i class="fab fa-facebook-square" aria-hidden="true"></i>
                  <span class="sr-only">Facebook</span>
                </a>
              </li>
              <li>
                <a href="http://twitter.com/swimmacc" class="text-secondary" target="_blank">
                  <i class="fab fa-twitter-square" aria-hidden="true"></i>
                  <span class="sr-only">Twitter</span>
                </a>
              </li>
              <li>
                <a href="http://instagram.com/swimmac_1977" class="text-secondary" target="_blank">
                  <i class="fab fa-instagram-square" aria-hidden="true"></i>
                  <span class="sr-only">Instagram</span>
                </a>
              </li>
              <li>
                <a href="https://www.youtube.com/c/SwimMACCarolina/" class="text-secondary" target="_blank">
                  <i class="fab fa-youtube" aria-hidden="true"></i>
                  <span class="sr-only">YouTube</span>
                </a>
              </li>
            </ul>
          </div>
        </div>

        <p class="text-gray text-sm text-right">
          Copyright Â© 2019-2021 SwimMAC Carolina - All Rights Reserved.
        </p>
      </div>
    </footer>
  </body>
  <script src="/static/app.bundled.js"></script>
</html>