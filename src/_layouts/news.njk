---
layout: base.njk
---

<main id="main" class="bg-gray-100 py-6">

  <div class="container">

    <p>
        <a href="/">Home</a> /
        <a href="/news/">News</a> /
        {{ title }}
    </p>

    <h2>{{ title }}</h2>
    <p>Posted {{ date | readableDate }}</p>

    <div class="radius shadow card p-4">
      <div class="flex flex-wrap -mx-4">
       <div class="w-full md:w-1/3 p-4">
          <img src="/static/{{ image }}" alt="">
        </div>
        <div class="w-full md:w-2/3 p-4">
          {{ content | safe }}
        </div>
       </div>
    </div>
  </div>

</main>