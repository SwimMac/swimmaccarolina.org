---
layout: base.njk
title: Our People
---
<main id="main" class="bg-gray-100">

  {% banner title %}

  <div class="container py-6">

    {% for category in staff %}
    <h2 class="separator-center">{{ category.section }}</h2>

    <div class="flex flex-wrap justify-center -m-4 mb-8">
      {% for person in category.members %}

      <div class="w-1/2 md:w-1/3 lg:w-1/6 p-4">
        <div class="card text-center h-full">
          {% if person.image %}
          <img src="/static/staff/{{ person.image }}" alt="{{ person.name }}" class="w-full">
          {% else %}
          <img src="/static/staff/coach-avatar.jpg" alt="{{ person.name }}" class="w-full">
          {% endif %}
          <div class="p-4">
            <h3 class="text-xl text-secondary mb-2">{{ person.name }}</h3>
            <p class="mb-2">{{ person.title }}</p>
            <p><a href="mailto:{{ person.email }}">Email</a></p>
          </div>
        </div>
      </div>
      {% endfor%}

    </div>
    {% endfor%}

  </div>

</main>