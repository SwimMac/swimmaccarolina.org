<div class="w-full md:w-1/2 lg:w-1/3 p-4">
  <div class="card flex h-full">

      <a href="{{ staffMember.url | url }}" class="w-2/5 flex flex-col">
        {% if staffMember.data.staffImage %}
        <img src="{{ staffMember.data.staffImage }}" alt="{{ staffMember.data.title }}" class="rounded-br-2xl">
        {% else %}
        <img src="https://www.swimmaccarolina.org/static/staff/coach-avatar.jpg" alt="{{ staffMember.data.title }}" class="rounded-br-2xl shadow-xl">
        {% endif %}
      </a>

      <div class="w-3/5 flex flex-col">
        <div class="flex-1 p-4">
          <h3 class="text-xl text-secondary mb-2">{{ staffMember.data.title }}</h3>
          <p>{{ staffMember.data.jobTitle }}</p>
          <a href="mailto:{{ staffMember.data.email }}@swimmaccarolina.org">Email</a>
        </div>

        <div class="flex justify-end content-center w-full p-4">
          <a href="{{ staffMember.url | url }}" class="button button--small ghost">Full Profile</a>
        </div>
      </div>

    </div>
</div>