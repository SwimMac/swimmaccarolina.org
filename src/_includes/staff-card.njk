<div class="w-1/2 md:w-1/3 lg:w-1/5 p-4">
  <div class="card text-center h-full">
    {% if staffMember.data.staffImage %}
    <div class="w-52 p-4">
      <a href="{{ staffMember.url | url }}"><img src="{{ staffMember.data.staffImage }}" alt="" class="rounded-full mx-auto"></a>
    </div>
    {% endif %}

    <div class="flex-1 p-4">
      <h2>{{ staffMember.data.firstName }} {{ staffMember.data.lastName }}</h2>
      <h3>{{ staffMember.data.jobTitle }}</h3>
      <p><a href="mailto:{{ staffMember.data.email }}">Email</a></p>
      <p><a href="{{ staffMember.url | url }}" class="button ghost">Full Profile</a></p>
    </div>
  </div>
</div>